{
  "manifest_version": 2,
  "name": "YouTube Detox",
  "version": "1.1.1",
  "description": "Transform YouTube into a focused, distraction-free space. Remove Shorts, recommendations, and stay in control of your viewing experience.",
  "author": "Alexander Ignatov",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-detox@example.com",
      "strict_min_version": "57.0"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "*://*.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles/youtube-detox.css"],
      "js": ["content-scripts/youtube-detox.js"],
      "run_at": "document_start"
    }
  ]
} 